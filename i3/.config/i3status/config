# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format=i3bar
        separator = ""
        colors = true
        color_good = "#689d6a"
        color_degraded = "#d79921"
        color_bad = "#cc241d"
        interval = 5
}

order += "wireless wlp2s0"
order += "wireless wl01"
order += "battery 0"
order += "battery 1"
order += "volume master"
order += "load"
order += "tztime local"

tztime local {
        format = "%a %d-%m   %H:%M"
}

load {
        format = "%1min"
}

battery 0 {
        format = "%status %remaining (%percentage)"
        format_down = ""
        status_chr = "⚇"
        status_bat = "⚡"
        status_full = "☻"
        hide_seconds = true
        integer_battery_capacity = true
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "percentage"
        low_threshold = 10
}

battery 1 {
        format = "%status %remaining (%percentage)"
        format_down = ""
        status_chr = "⚇"
        status_bat = "⚡"
        status_full = "☻"
        hide_seconds = true
        integer_battery_capacity = true
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "percentage"
        low_threshold = 10
}

wireless wl01 {
        format_up = "%ip@%essid"
        format_down = ""
}

wireless wlp2s0 {
        format_up = "%ip@%essid"
        format_down = ""
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ [%volume]"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
