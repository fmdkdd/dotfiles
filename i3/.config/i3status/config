# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format=i3bar
        separator = ""
        colors = true
        color_good = "#689d6a"
        color_degraded = "#d79921"
        color_bad = "#cc241d"
        interval = 1
}

order+= "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "load"
order += "tztime local"

tztime local {
        format = "%a %d-%m   %H:%M"
}

load {
        format = "%1min"
}

battery all {
        format = "%status %remaining (%percentage)"
        format_down = ""
        status_chr = "⚇"
        status_bat = "⚡"
        status_full = "☻"
        hide_seconds = true
        integer_battery_capacity = true
        threshold_type = "percentage"
        low_threshold = 10
}

wireless _first_ {
        format_up = "%ip@%essid"
        format_down = ""
}

ethernet _first_ {
	 format_up = "%ip"
	 format_down = ""
}

volume master {
        format = " %volume"
        format_muted = "♪ [%volume]"
        device = "hw:2"
        mixer = "PCM"
        mixer_idx = 0
}

disk "/" {
     format = "%avail"
}
